    <img
      src={card.strCardThumb}
      alt={card.strCard}
      className="w-full h-40 object-cover rounded-t-lg"
    />
    <h2 className="text-xl font-semibold mt-2">{card.strCard}</h2>
    <p className="text-gray-600">{card.strInstructions}</p>
  </div>
);

